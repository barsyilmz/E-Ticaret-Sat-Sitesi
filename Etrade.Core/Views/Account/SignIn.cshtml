@model Etrade.Entity.Models.ViewModels.SignInViewModel
@{
    ViewData["Title"] = "SignIn";
}

<h1 class="py-5">SignIn</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="UserNameOrEmail" class="control-label"></label>
        <input asp-for="UserNameOrEmail" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="RememberMe" class="form-check-label" >Beni Hatırla</label>
        <input asp-for="RememberMe" class="form check-input" type="checkbox" />
    </div>
    <div class="form-group">
        <input type="submit" value="create" class="btn btn-primary" />
    </div>
</form>
